<div class="container">
  <h1 class="my-5">Pets lost in Meguro 🐶</h1>
  <div class="row">
    <% @pets.each do |pet| %>
      <div class="col-12 col-sm-6 col-lg-4">
        <%= link_to pet_path(pet) do %>
          <div class="shadow rounded p-3 mb-5">
            <h3><%= pet.name %> - <%= pet.species %></h3>
            <p>📍<%= pet.location %></p>
            <p>Lost <%= pet.lost_days_ago %> days ago.</p>
          </div>
        <% end %>
      </div>
    <% end %>
  </div>
</div>
